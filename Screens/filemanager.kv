MDScreen:
    name:"FileManager"
    md_bg_color: 244/255,249/255,253/255,.2









    #navigation menu                    
    MDFloatLayout:
        size_hint:.98,.1
        pos_hint: {"center_x": .5,"center_y": .06}
        canvas:
            Color:
                rgba:(0/255,0/255,0/255,1)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
                
        MDIconButton:
            icon: "home"
            pos_hint: {"center_x":.2 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "right"
                root.manager.current = "Home"

        MDIconButton:
            icon: "view-agenda"
            pos_hint: {"center_x":.4 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "right"
                root.manager.current = "todoScreen" 
        
        MDIconButton:
            icon: "library"
            pos_hint: {"center_x":.6 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "right"
                root.manager.current = "CoursesScreen"
        MDFloatLayout:
            size_hint:.2,.8
            pos_hint: {"center_x": .8,"center_y": .5}
            canvas:
                Color:
                    rgba:(12/255,12/255,13/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[20]
        MDIconButton:
            icon: "folder"
            pos_hint: {"center_x":.8 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "FileManager"