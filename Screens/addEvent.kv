#: import FadeTransition kivy.uix.screenmanager.FadeTransition
MDScreen: 
    name:"add_event"
    md_bg_color: 244/255,249/255,253/255,1
    evnt_venue: evnt_venue
    event_name:event_name
    start_date:start_date
    end_date:end_date
    start_time:start_time
    end_time:end_time
    
    MDFloatLayout:
        MDIconButton:
            icon:"chevron-left"
            icon_size:dp(30)
            pos_hint:{"center_y":.95}
            theme_text_color:'Custom'
            color:(30/255,47/255,151/255,1)
            on_release:
                root.manager.transition = FadeTransition()
                root.manager.current = "Calendarscreen"
        MDLabel:
            text: "Add Event"
            pos_hint: {"center_x": .8,"center_y": .95}
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size: "32dp"

    #event_name input
        MDFloatLayout:
            size_hint:.42,.08
            pos_hint: {"center_x": .26,"center_y": .84}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id:event_name
                hint_text:"Phy411 *"
                input_type:"text"
                keyboard_suggestion:True
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .4}
                multiline:False
                cursor_width: "2dp"
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:10
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"
            MDIconButton:
                icon: "coffee"
                icon_size:dp(20)
                pos_hint:{"center_x":.9,"center_y": .5}
                on_release: event_name.text =""
                padding: '10dp'
                

    #evnt_venue input
        MDFloatLayout:
            size_hint:.42,.08
            pos_hint: {"center_x": .74,"center_y": .84}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id:evnt_venue
                hint_text:"Tent2 *"
                input_type:"text"
                keyboard_suggestion:True
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .5}
                multiline:False
                cursor_width: "2dp"
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"
            MDIconButton:
                icon: "city"
                icon_size:dp(20)
                pos_hint:{"center_x":.9,"center_y": .5}
                on_release: evnt_venue.text =""
                padding: '10dp'
        
    #date_time input
        #Start date
        MDFloatLayout:
            size_hint:.8,.08
            pos_hint: {"center_x": .5,"center_y": .72}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            MDLabel:
                id:start_date
                text:" Start Date"
                size_hint: .8,None
                pos_hint: {"center_x": .4,"center_y": .5}
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:10
                font_name:'assets/fonts/JosefinSans-Light.ttf'
                font_size:"18dp"
            MDIconButton:
                icon: 'calendar-check'
                icon_size:dp(25)
                pos_hint:{"center_x":.9,"center_y": .5}
                on_release: app.event_Sdate_picker()
                padding: '10dp'
        #End date
        MDFloatLayout:
            size_hint:.8,.08
            pos_hint: {"center_x": .5,"center_y": .62}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            MDLabel:
                id:end_date
                text:"End Date"
                size_hint: .8,None
                pos_hint: {"center_x": .4,"center_y": .5}
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:10
                font_name:'assets/fonts/JosefinSans-Light.ttf'
                font_size:"18dp"
            MDIconButton:
                icon: 'calendar-check'
                icon_size:dp(25)
                pos_hint:{"center_x":.9,"center_y": .5}
                on_release: app.event_Edate_picker()
                padding: '10dp'

        #time picker settings 
        #From
        MDFloatLayout:
            size_hint:.42,.08
            pos_hint: {"center_x": .26,"center_y": .5}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            MDLabel:
                id:start_time
                text:"Start time"
                size_hint: .8,None
                pos_hint: {"center_x": .4,"center_y": .5}
                cursor_width: "2dp"
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:10
                font_name:'assets/fonts/JosefinSans-Light.ttf'
                font_size:"18dp"
            MDIconButton:
                icon: 'clock'
                pos_hint:{"center_x":.86,"center_y": .5}
                on_release: app.event_Stime_picker()
                icon_size:dp(25)
                padding: '10dp'
        #To
        MDFloatLayout:
            size_hint:.42,.08
            pos_hint: {"center_x": .74,"center_y": .5}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            MDLabel:
                id:end_time
                text:"End Time"
                size_hint: .8,None
                pos_hint: {"center_x": .4,"center_y": .5}
                cursor_width: "2dp"
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:10
                font_name:'assets/fonts/JosefinSans-Light.ttf'
                font_size:"18dp"
            MDIconButton:
                icon: 'clock'
                icon_size:dp(25)
                pos_hint:{"center_x":.86,"center_y": .5}
                on_release: app.event_Etime_picker()
                padding: '10dp'
        


        #add task button
        Button:
            text: "Add Event"
            size_hint: .45,.08
            pos_hint: {"center_x": .5,"center_y": .38}
            background_color:0,0,0,0
            font_name: 'assets/fonts/JosefinSans-SemiBold.ttf'
            font_size: "18dp"
            color: 1,1,1,1
            on_release:
                app.update_timetable(event_name.text)
                
            canvas.before:
                Color:
                    rgba:(30/255,47/255,151/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]

    #navigation menu
    MDFloatLayout:
        size_hint:1,.1
        pos_hint: {"center_x": .5,"center_y": .05}
        canvas:
            Color:
                rgba:(0/255,0/255,0/255,1)
            Rectangle:
                size:self.size
                pos:self.pos

        MDIconButton:
            icon: "home"
            icon_size:dp(30)
            pos_hint: {"center_x":.14 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition = FadeTransition()
                root.manager.current = "Home"

        MDIconButton:
            icon: "view-agenda"
            icon_size:dp(30)
            pos_hint: {"center_x":.38,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition = FadeTransition()
                root.manager.current = "todoScreen" 
        
        
        MDIconButton:
            icon: "library"
            icon_size:dp(30)
            pos_hint: {"center_x":.62 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.update_coursescreen()
                root.manager.transition = FadeTransition()
                root.manager.current = "CoursesScreen"
        MDFloatLayout:
            size_hint:.2,.8
            pos_hint: {"center_x": .86,"center_y": .5}
            canvas:
                Color:
                    rgba:(30/255,47/255,151/255,.4)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[20]
                    
            MDIconButton:
                icon: "calendar"
                icon_size:dp(30)
                pos_hint: {"center_x":.5 ,"center_y":.5}
                theme_text_color:"Custom"
                color:(30/255,47/255,151/255,1)
                on_press:
                    root.manager.transition = FadeTransition()
                    root.manager.current = "Calendarscreen"

