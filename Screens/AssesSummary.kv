<AssessmentCard>
    id: assessmnt_card
    elevation: 0
    radius:[8]
    size_hint:1,None
    height:dp(140)
    assmtContr:assmtContr
    assmtMark:assmtMark
    assmtName:assmtName
    testpk:testpk
    
    MDLabel:
        id:testpk

    MDFloatLayout:
        size_hint:1,1
        pos_hint: {'center_x':.5,'center_y':.5}
        canvas:
            Color:
                rgba:app.Courseschooser()
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
        MDLabel:
            id:assmtName
            text:root.testName
            size_hint:.96,.1
            pos_hint: {'center_x':.5,'center_y': .84}
            foreground_color: 1/255,1/255,1/255,1
            background_color: 0,0,0,0
            padding:6
            font_name:'assets/fonts/Poppins-Bold.ttf'
            font_size:"17dp"
        
        MDLabel:
            id:assmtMark
            text:root.testMark
            size_hint:.8,.1
            pos_hint: {'center_x':.86,'center_y': .68}
            foreground_color: 1/255,1/255,1/255,1
            background_color: 0,0,0,0
            padding:8
            font_name:'assets/fonts/CroissantOne-Regular.ttf'
            font_size:"16dp"
        
        MDLabel:
            id:assmtWeight
            text:root.testWeight
            size_hint:.8,.1
            pos_hint: {'center_x':.5,'center_y': .38}
            foreground_color: 1/255,1/255,1/255,1
            background_color: 0,0,0,0
            padding:8
            font_name:'assets/fonts/CroissantOne-Regular.ttf'
            font_size:"16dp"
        MDLabel:
            id:assmtContr
            text:root.testContrib
            size_hint:.8,.1
            pos_hint: {'center_x':.5,'center_y': .2}
            foreground_color: 1/255,1/255,1/255,1
            background_color: 0,0,0,0
            padding:8
            font_name:'assets/fonts/CroissantOne-Regular.ttf'
            font_size:"16dp"


<AssesSummary>:
    md_bg_color: 244/255,249/255,253/255,1
    name:"AssessmentSummary"
    crseid:crseid
    crsecr:crsecr
    categName:categName
    categWeight:categWeight
    categContrib:categContrib
    avgbar:avgbar
    assessmnt_list:assessmnt_list
    

    #header bar
    MDFloatLayout:
    
        MDIconButton:
            icon:"chevron-left"
            user_font: "40dp"
            pos_hint:{"center_y":.95}
            theme_text_color:'Custom'
            text_color:  12/255,12/255,13/255,1
            on_release:
                root.manager.transition = FadeTransition()
                root.manager.current = "overviewscreen"
                app.clearAssmary()
    
        #Course ID label
        MDLabel:
            id:crseid
            text:""
            pos_hint: {"center_x": .72,"center_y": .95}
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size: "32dp"
    
        #Course Credit label
        MDLabel:
            id:crsecr
            text:""
            size_hint:.3,.8
            pos_hint: {"center_x": .94,"center_y": .95}
            font_name: 'assets/fonts/CroissantOne-Regular.ttf'
            font_size: "18dp"

    MDFloatLayout:
        size_hint:.96,.28
        pos_hint: {"center_x": .5,"center_y": .76}
        canvas:
            Color:
                rgba:(244/255,249/255,253/255,.8)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
        MDLabel:
            id: categName
            text:""
            size_hint: .6,.2
            pos_hint: {"center_x": .32,"center_y": .86}
            foreground_color: 1,1,1,1
            background_color: 0,0,0,0
            padding:4
            font_name:'assets/fonts/Oxygen-Bold.ttf'
            font_size:"20dp"

        #Tug weight
        MDFloatLayout:
            size_hint:.27,.5
            pos_hint: {"center_x": .46,"center_y": .5}
            canvas:
                Color:
                    rgba:(30/255,47/255,151/255,.5)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            MDLabel:
                text:"Weight"
                size_hint:1,.2
                pos_hint: {"center_x": .54,"center_y": .82}
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:2
                font_name:'assets/fonts/Poppins-Bold.ttf'
                font_size:"17dp"
            MDLabel:
                id: categWeight
                text:""
                size_hint: 1,.5
                pos_hint: {"center_x": .55,"center_y": .4}
                foreground_color: 1/255,1/255,1/255,.8
                background_color: 0,0,0,0
                padding:2
                font_name:'assets/fonts/CroissantOne-Regular.ttf'
                font_size:"38dp"

        #Tug Contribution
        MDFloatLayout:
            size_hint:.37,.94
            pos_hint: {"center_x": .81,"center_y": .5}
            canvas:
                Color:
                    rgba:app.Courseschooser()
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            MDLabel:
                text:"Contribute"
                size_hint: 1,.2
                pos_hint: {"center_x":.5,"center_y": .84}
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:2
                font_name:'assets/fonts/Poppins-Bold.ttf'
                font_size:"16dp"
            MDLabel:
                id: categContrib
                text:""
                size_hint:1,.5
                pos_hint: {"center_x": .6,"center_y": .4}
                padding:2
                font_name:'assets/fonts/CroissantOne-Regular.ttf'
                font_size:"60dp"

        MDFloatLayout:
            id:avgbar
            size_hint:.24,.04
            pos_hint:{"center_x":.16, "center_y":.7}
            canvas:
                Color:
                    rgba:(245/255,83/255,133/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[2]
                    
        MDFloatLayout:
            pos_hint: {'center_x':.17,'center_y':.4}
            size_hint:.3,.4
            MDLabel:
                id:categavar
                text: "70"
                color:(35/255,209/255,139/255,1)
                pos_hint: {'center_x':.5,'center_y':.5}
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:2
                font_name:'assets/fonts/CroissantOne-Regular.ttf'
                font_size:"60dp"
       
            
            

    HoverButton:
        size_hint: .2,.048
        text: "+"
        font_name: 'assets/fonts/JosefinSans-Bold.ttf'
        font_size: "32dp"
        background_color:1,1,1,0
        pos_hint: {"center_x":.45 ,"center_y":.65}
        color: 1,1,1,1     
        canvas.before:
            Color:
                rgba:self.background
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[10]
        on_release:
            app.getCateg(categName.text)
            app.clear_Add_assesmnt()
            root.manager.transition = FadeTransition()
            root.manager.current = "addAssesment"
    

    #Assessment summary scroll
    MDFloatLayout:
        size_hint:.99,.52
        pos_hint:{"center_x":.5,"center_y": .36}
        canvas:
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[10]    
        ScrollView:
            do_scroll_y:True
            do_scroll_x:False
            size_hint_y:1
            pos_hint:{"center_x":.5,"center_y": .5}
            bar_width:0
            GridLayout:
                orientation: "lr-tb"
                id: assessmnt_list
                cols: 2
                height:self.minimum_height
                row_default_height:80
                size_hint_y:None
                padding:8,8
                spacing:10,10
    
                
#navigation menu
    MDFloatLayout:
        size_hint:.98,.1
        pos_hint: {"center_x": .5,"center_y": .06}
        canvas:
            Color:
                rgba:(0/255,0/255,0/255,1)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]

        MDIconButton:
            icon: "home"
            pos_hint: {"center_x":.2 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.clearOverview()
                app.clearAssmary()
                root.manager.transition = FadeTransition()
                root.manager.current = "Home"

        MDIconButton:
            icon: "view-agenda"
            pos_hint: {"center_x":.4 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.clearOverview()
                app.clearAssmary()
                root.manager.transition = FadeTransition()
                root.manager.current = "todoScreen" 
        
        MDFloatLayout:
            size_hint:.2,.8
            pos_hint: {"center_x": .6,"center_y": .5}
            canvas:
                Color:
                    rgba:(30/255,47/255,151/255,.6)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[20]
            MDIconButton:
                icon: "library"
                pos_hint: {"center_x":.5 ,"center_y":.5}
                theme_text_color:"Custom"
                text_color: 1,1,1,1
                on_press:
                    app.clearAssmary()
                    root.manager.transition = FadeTransition()
                    root.manager.current =  "overviewscreen"
                    
        MDIconButton:
            icon: "account"
            pos_hint: {"center_x":.8 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.clearOverview()
                app.clearAssmary()
                root.manager.transition = FadeTransition()
                root.manager.current = "AccountMenu"
