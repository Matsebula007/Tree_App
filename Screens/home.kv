#: import FadeTransition kivy.uix.screenmanager.FadeTransition
MDScreen:
    name:"main"
    md_bg_color: 244/255,249/255,253/255,1
    MDFloatLayout:
        Image: 
            source: "assets/logoB.png"
            pos_hint: {"center_x": .5, "center_y": .8}
        MDLabel:
            text: "Unitree"
            font_name: "assets/fonts/CroissantOne-Regular.ttf"
            font_size: "23dp"
            halign: "center"
            pos_hint: {"center_y": .50}
            color: rgba(0,0,59,255)
        MDLabel:
            text: "Tracking progress makes progress, and progress makes winners."
            font_name: "assets/fonts/CroissantOne-Regular.ttf"
            font_size: "23dp"
            halign: "center"
            pos_hint: {"center_x":.5,"center_y": .35}
            size_hint_x: .85
            color: rgba(127,127,127,255)
        Button:
            text: "HOME"
            size_hint: .66,.065
            pos_hint: {"center_x":.5,"center_y": .18}
            background_color: 0,0,0,0
            font_name: "assets/fonts/JosefinSans-SemiBold.ttf"
            on_press: 
                root.manager.transition = FadeTransition()
                root.manager.current = "Home"
            canvas.before:
                Color:
                    rgba:(52/255,0,231/255,1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "EXIT"
            size_hint: .66,.065
            pos_hint: {"center_x":.5,"center_y": .09}
            color: rgba(52,0,231,255)
            background_color: 0,0,0,0
            font_name: "assets/fonts/JosefinSans-SemiBold.ttf"
            on_press:
                app.close_app()
            canvas.before:
                Color:
                    rgba:rgba(52,0,231,255)
                Line: 
                    width: 1.2
                    rounded_rectangle:self.x,self.y,self.width,self.height,5,5,5,5,100
        MDLabel:
            pos_hint: {'center_x': .62,'center_y': .02}
            size_hint: .6,None
            text:"(c) 2023 Matsebula007"
            font_name: "assets/fonts/JosefinSans-SemiBold.ttf"
            font_size:"12sp"
            color: rgba(127,127,127,.4)

            