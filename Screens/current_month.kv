#: import FadeTransition kivy.uix.screenmanager.FadeTransition
<MonthCard>
    id: month_card
    elevation: 0
    radius:[8]
    size_hint:1,None
    height:dp(50)
    md_bg_color: 248/255,249/255,253/255,1
    Button:
        size_hint: .7,.7
        pos_hint: {"center_x":.5,"center_y":.5}  
        background_color:0,0,0,0  
        on_release:
            app.view_monthtask(dayname.text,evtdate.text)
    MDFloatLayout:
        pos_hint: {'center_x':.5,'center_y':.5}
        size_hint:1,1
        canvas:
            Color:
                rgba:(74/255,222/255,222/255,.8)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
    #Event date
        MDFloatLayout:
            size_hint:.32,1
            pos_hint: {"center_x":.16,"center_y":.5}
            canvas:
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            #Event date
            MDLabel:
                id:dayname
                text:root.evnt_day 
                markup: True
                color:30/255,47/255,151/255,1
                font_name: 'assets/fonts/CroissantOne-Regular.ttf'
                font_size:"20sp"
                size_hint_x:.8
                size_hint_y:.4
                pos_hint:{"center_x":.5,"center_y": .78}
            #Event month
            MDLabel:
                id:evtdate
                text:root.evnt_date
                markup: True
                color: 1/255,1/255,1/255,1
                font_name: 'assets/fonts/CroissantOne-Regular.ttf'
                font_size:"28sp"
                size_hint_x:.5
                size_hint_y:.5
                pos_hint:{"center_x":.7,"center_y": .32}
    #TASK NUMBER
        MDFloatLayout:
            size_hint:.3,.9
            pos_hint: {"center_x":.5,"center_y":.5}
            canvas:
                Color:
                    rgba:(248/255,249/255,253/255,.8)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            #TASK text
            MDLabel:
                text:"Tasks" 
                markup: True
                color:30/255,47/255,151/255,.8
                font_name: 'assets/fonts/JosefinSans-Bold.ttf'
                font_size:"18sp"
                size_hint_x:.8
                size_hint_y:.4
                pos_hint:{"center_x":.55,"center_y": .74}
            Button:
                size_hint: .8,.8
                pos_hint: {"center_x":.5,"center_y":.5}  
                background_color:0,0,0,0  
                on_release:
                    app.view_monthtask(dayname.text,evtdate.text)
            #Event count
            MDLabel:
                text:root.task_number 
                markup: True
                color: 1/255,1/255,1/255,1
                font_name: 'assets/fonts/CroissantOne-Regular.ttf'
                font_size:"16sp"
                size_hint_x:.5
                size_hint_y:.5
                pos_hint:{"center_x":.55,"center_y": .32}
   
    #Event DAY HOURS
        MDFloatLayout:
            size_hint:.3,.9
            pos_hint: {"center_x":.84,"center_y":.5}
            canvas:
                Color:
                    rgba:(248/255,249/255,253/255,.8)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            #Events HOURS text
            MDLabel:
                text:"Hours"
                markup: True
                color:30/255,47/255,151/255,.8
                font_name: 'assets/fonts/JosefinSans-Bold.ttf'
                font_size:"18sp"
                size_hint_x:.8
                size_hint_y:.4
                pos_hint:{"center_x":.55,"center_y": .74}
            #Event HOURS
            MDLabel:
                text:root.evnt_hours
                markup: True
                color: 1/255,1/255,1/255,1
                font_name: 'assets/fonts/CroissantOne-Regular.ttf'
                font_size:"16sp"
                size_hint_x:.5
                size_hint_y:.5
                pos_hint:{"center_x":.6,"center_y": .32}


MDScreen:
    name:"monthscreen"
    md_bg_color: 244/255,249/255,253/255,1
    table_list:table_list
    table_month:table_month
    week_text:week_text
    statusbarW:statusbarW
    statusbarM:statusbarM
    timetable_view:timetable_view
    #selection control
    MDFloatLayout:
        MDLabel:
            text:"Your Timetable"
            pos_hint: {"center_x":.54,"center_y": .96}
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size:"24dp"
        MDFloatLayout:
            id:statusbarW
            size_hint:.46,.002
            pos_hint:{"center_x":.27, "center_y":.885}
            md_bg_color:"#EEF7F6"
        Button:
            id:week_text
            text:"This Week"
            color:63/255,72/255,204/255,.7
            pos_hint: {"center_x":.25,"center_y": .9}
            font_name: 'assets/fonts/JosefinSans-Regular.ttf'
            font_size:"18sp"
            size_hint:.28,.04
            background_color:0,0,0,0
            on_press:
                app.clear_for_week()
                root.manager.transition = FadeTransition()
                root.manager.current ="Calendarscreen"
        MDFloatLayout:
            id:statusbarM
            size_hint:.46,.002
            pos_hint:{"center_x":.73, "center_y":.885}
            md_bg_color:"#7BDFF2"
        Button:
            id:table_month
            text:"August"
            color:63/255,72/255,204/255,1
            pos_hint: {"center_x":.77,"center_y": .9}
            font_name: 'assets/fonts/JosefinSans-Regular.ttf'
            font_size:"18sp"
            size_hint:.3,.2
            background_color:0,0,0,0
            on_press:
                root.manager.transition = FadeTransition()
                app.clear_for_month()

    #top add event button
    MDFloatLayout:
        size_hint:.38,.06
        pos_hint: {"center_x": .78,"center_y": .96}
        canvas.before:
            Color:
                rgba:(30/255,47/255,151/255,.5)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
        Button:
            text: "Add Event"
            size_hint:1,1
            pos_hint: {"center_x":.58,"center_y": .5}
            background_color:0,0,0,0
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size: "18dp"
            color: 1,1,1,1
            on_press:
                root.manager.transition = FadeTransition()
                root.manager.current = "add_event"
        MDIconButton:
            icon:"plus"
            pos_hint:{"center_x": .1,"center_y": .5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition = FadeTransition()
                root.manager.current = "add_event"
    
                

    
    #Timetable view
    MDFloatLayout:
        id:timetable_view
        size_hint:.99,.8
        pos_hint:{"center_x":.5,"center_y": .48}  
        canvas:
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]  
        ScrollView:
            do_scroll_y:True
            do_scroll_x:False
            size_hint_y:1
            pos_hint:{"center_x":.5,"center_y": .5}
            bar_width:2
            bar_color:(30/255,47/255,151/255,.8)
            MDGridLayout:
                orientation: "lr-tb"
                id: table_list
                cols: 1
                height:self.minimum_height
                row_default_height:50
                size_hint_y:None
                padding:10,10
                spacing:10,10
            
                
        
        
    #navigation menu
    MDFloatLayout:
        size_hint:1,.1
        pos_hint: {"center_x": .5,"center_y": .05}
        canvas:
            Color:
                rgba:(0/255,0/255,0/255,1)
            Rectangle:
                size:self.size
                pos:self.pos
                
        MDIconButton:
            icon: "home"
            icon_size:dp(30)
            pos_hint: {"center_x":.14 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition = FadeTransition() 
                root.manager.current = "Home"

        MDIconButton:
            icon: "view-agenda"
            icon_size:dp(30)
            pos_hint: {"center_x":.38 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition = FadeTransition() 
                root.manager.current = "todoScreen" 
        
        MDIconButton:
            icon: "library"
            icon_size:dp(30)
            pos_hint: {"center_x":.62 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.update_coursescreen()
                root.manager.transition = FadeTransition() 
                root.manager.current = "CoursesScreen"
        MDFloatLayout:
            size_hint:.2,.8
            pos_hint: {"center_x": .86,"center_y": .5}
            canvas:
                Color:
                    rgba:(30/255,47/255,151/255,.2)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[20]
        
            MDIconButton:
                icon: "calendar"
                icon_size:dp(30)
                pos_hint: {"center_x":.5 ,"center_y":.5}
                theme_text_color:"Custom"
                color:(30/255,47/255,151/255,1)
                on_press:
                    root.manager.transition.direction = "left"
                    root.manager.current = "add_event"
   