<TodoCard>
    id: task_card
    elevation: 0
    md_bg_color:1,1,1
    radius:[8]
    size_hint:1,None
    height:dp(160)
    #card primary key holder
    MDLabel:
        id:pk
        markup:True

    #task note settings
    MDFloatLayout:
        size_hint:.8,1
        pos_hint: {"center_x": .61,"center_y": .5}
        canvas:
            Color:
                rgba:(0,1,.898,1)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
        
        #task tittle description
        MDLabel:
            text:root.title
            markup: True
            font_name: 'assets/fonts/Sono_Monospace-Medium.ttf'
            font_size:"18sp"
            size_hint_x:.8
            size_hint_y:.8
            pos_hint:{"center_x":.48,"center_y": .8}
        
        #task description settings
        MDLabel:
            id:description
            text:root.description
            font_name:'assets/fonts/Sono_Monospace-Regular.ttf'
            font_size:"12sp"
            markup:True
            size_hint_x:.8
            size_hint_y:.7
            pos_hint:{"center_x": .48,"center_y":.55}
        
        #checkbox settings
        MDCheckbox:
            id:check
            size_hint:None,None
            size:"48dp","48dp"
            unselected_color: 1,170/255,23/255,1
            selected_color: 0,179/255,0,1
            pos_hint:{"center_x":.9,"center_y": .8}
            on_active: app.on_complete(task_card,check,description,bar)
        
        #delete button settings
        MDIconButton:
            icon: 'trash-can-outline'
            theme_text_color: "Custom"
            text_color: 0, 0, 0, .8
            pos_hint:{"center_x":.9,"center_y": .2}
            on_release: 
                app.delete_item(task_card)

        #task date settings    
        MDLabel:
            id:task_date
            text:root.task_date
            markup: True
            font_name: 'assets/fonts/Sono_Monospace-Medium.ttf'
            font_size:"16sp"
            size_hint_x:.8
            size_hint_y:.2
            pos_hint:{"center_x":.48,"center_y": .2}

    #task time settings 
    MDFloatLayout:
        size_hint:.2,1
        pos_hint: {"center_x": .09,"center_y": .5}
        canvas:
            Color:
                rgba:(238/255,238/255,238/255,.2)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
        #task status bar settungs
        MDFloatLayout:
            id:bar
            size_hint:.03,.98
            pos_hint:{"center_x":.95, "center_y":.5}
            md_bg_color: 1, 170/255,23/255,1
          
        MDLabel:
            id:task_time
            text:root.task_time
            color: 1,170/255,23/255,1
            font_name: 'assets/fonts/Sono_Monospace-Medium.ttf'
            font_size:"18sp"
            size_hint_x:.8
            size_hint_y:.8
            pos_hint:{"center_x":.5,"center_y": .8}

        MDLabel:
            id:task_time2
            text:root.task_time2
            color:0,179/255,0,1
            font_name: 'assets/fonts/Sono_Monospace-Medium.ttf'
            font_size:"18sp"
            size_hint_x:.8
            size_hint_y:.8
            pos_hint:{"center_x":.5,"center_y": .2}

MDScreen:
    name: "todoScreen"
    date_text: date_text
    todo_list:todo_list     
    MDFloatLayout:
        md_bg_color:1,1,1,1
        MDLabel:
            text:"Today"
            pos_hint: {"center_x":.55,"center_y": .9}
            font_name: 'assets/fonts/Sono_Monospace-Bold.ttf'
            font_size:"30dp"
        MDLabel:
            id: date_text
            pos_hint: {"center_x":.55,"center_y": .95}
            font_name: 'assets/fonts/Sono_Monospace-Regular.ttf'
            font_size:"14sp"
    
    #task view
    MDFloatLayout:
        size_hint:.99,.9
        pos_hint:{"center_x":.5,"center_y": .48}    
        ScrollView:
            do_scroll_y:True
            do_scroll_x:False
            size_hint_y:.85
            pos_hint:{"center_x":.5,"center_y": .5}
            bar_width:0
            MDList:
                id: todo_list
                cols: 1
                padding:15,10
                spacing:15,10
                
    #top add task button
    MDFloatLayout:
        size_hint:.46,.06
        pos_hint: {"center_x": .75,"center_y": .90}
        canvas:
            Color:
                rgba:(238/255,238/255,238/255,0)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]

        Button:
            text: "Add Task"
            size_hint:1,1
            pos_hint: {"center_x":.5,"center_y": .5}
            background_color:0,0,0,0
            font_name: 'assets/fonts/Sono_Monospace-Medium.ttf'
            font_size: "18dp"
            color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "add_todo"
            canvas.before:
                Color:
                    rgba:(20/255,252/255,140/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
        MDIconButton:
            icon:"plus"
            pos_hint:{"center_x": .1,"center_y": .5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "add_todo"

    #navigation menu                    
    MDFloatLayout:
        size_hint:.98,.1
        pos_hint: {"center_x": .5,"center_y": .06}
        canvas:
            Color:
                rgba:(0/255,0/255,0/255,1)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
                
        MDIconButton:
            icon: "home"
            pos_hint: {"center_x":.2 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "right"
                root.manager.current = "Home"

        MDIconButton:
            icon: "view-agenda"
            pos_hint: {"center_x":.4 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "todoScreen" 
        
        MDIconButton:
            icon: "library"
            pos_hint: {"center_x":.6 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "CoursesScreen"
        
        MDIconButton:
            icon: "folder"
            pos_hint: {"center_x":.8 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "Home"
