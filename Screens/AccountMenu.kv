                color: rgba(0,0,59,255)
            MDIconButton:
                icon:"chevron-right"
                user_font: "40dp"
                pos_hint:  {"center_x": .9,"center_y": .5}
                theme_text_color:'Custom'
                text_color: 12/255,12/255,13/255,1
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "CoursesScreen"


   