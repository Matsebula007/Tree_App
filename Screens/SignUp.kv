#: import FadeTransition kivy.uix.screenmanager.FadeTransition
MDScreen:
    name:"SignUp"
    usr_email: usr_email
    usr_name: usr_name
    usr_pass: usr_pass
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon: "chevron-left"
            pos_hint: {"center_y":.95}
            user_font_size:"30dp"
            theme_text_color:"Custom"
            text_color:rgba(26,24,58,255)
            on_press:
                root.manager.transition = FadeTransition()
                root.manager.current = "main"
            
        MDLabel:
            text: "Welcome, take the first step"
            font_name: "assets/fonts/Sono_Monospace-Bold.ttf"
            font_size: "26dp"
            halign: "center"
            pos_hint: {"center_x": .5,"center_y": .85}
            color: rgba(0,0,59,255)
        MDLabel:
            text: "Create a new account"
            font_name: "assets/fonts/Sono-Regular.ttf"
            font_size: "18dp"
            halign: "center"
            pos_hint: {"center_x":.5,"center_y": .75}
            size_hint_x: .85
            color: rgba(135,133,193,255)
        MDFloatLayout:
            size_hint: .7,.07
            pos_hint:{"center_x": .5, "center_y": .66}
            TextInput:
                id:usr_name
                hint_text: "Username"
                font_name: "assets/fonts/Sono-Regular.ttf"
                size_hint_y: .75
                pos_hint: {"center_x": .45, "center_y": .50}
                background_color: 1,1,1,0
                foreground_color: rgba(0,0,59,255)
                cursor_color: rgba(0,0,60,255)
                font_size:"16dp"
                cusor_width: "1dp"
                multiline: False

            MDFloatLayout:
                pos_hint:{"center_x":.45, "center_y": 0}
                size_hint_y: .03
                md_bg_color:rgba(178,178,178,255)
        MDFloatLayout:
            size_hint: .7,.07
            pos_hint:{"center_x": .5, "center_y": .56}
            TextInput:
                id:usr_email
                hint_text: "Email"
                font_name: "assets/fonts/Sono-Regular.ttf"
                size_hint_y: .75
                pos_hint: {"center_x": .45, "center_y": .50}
                background_color: 1,1,1,0
                foreground_color: rgba(0,0,59,255)
                cursor_color: rgba(0,0,60,255)
                font_size:"16dp"
                cusor_width: "1dp"
                multiline: False

            MDFloatLayout:
                pos_hint:{"center_x":.45, "center_y": 0}
                size_hint_y: .03
                md_bg_color:rgba(178,178,178,255)

        MDFloatLayout:
            size_hint: .7,.07
            pos_hint:{"center_x": .5, "center_y": .46}
            TextInput:
                id:usr_pass
                hint_text: "Password"
                font_name: "assets/fonts/Sono-Regular.ttf"
                size_hint_y: .75
                pos_hint: {"center_x": .45, "center_y": .50}
                background_color: 1,1,1,0
                foreground_color: rgba(0,0,59,255)
                cursor_color: rgba(0,0,60,255)
                font_size:"16dp"
                cusor_width: "1dp"
                multiline: False
                password:True
            MDFloatLayout:
                pos_hint:{"center_x":.45, "center_y": 0}
                size_hint_y: .03
                md_bg_color:rgba(178,178,178,255)
        Button:
            text: "SIGN UP"
            size_hint: .63,.065
            pos_hint: {"center_x":.5,"center_y": .34}
            background_color: 0,0,0,0
            font_name: "assets/fonts/Sono_Monospace-Medium.ttf"
            on_press: 
                app.userSignUp(usr_name,usr_email,usr_pass)
            canvas.before:
                Color:
                    rgba:rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

       
           
        MDFloatLayout:
            MDLabel:
                text:"Already have an account?"
                font_name:"assets/fonts/Sono_Monospace-Medium.ttf"
                font_size:"12dp"
                color:rgba(135,133,193,255)
                pos_hint: {"center_x":.40,"center_y":.2}
                halign:"center"
            MDTextButton:
                text:"Sign In"
                font_name:"assets/fonts/Sono_Monospace-Medium.ttf"
                font_size:"12dp"
                color:rgba(52,0,231,255)
                pos_hint: {"center_x":.80,"center_y":.2}
                on_press:
                    root.manager.transition = FadeTransition()
                    root.manager.current = "Login" 
