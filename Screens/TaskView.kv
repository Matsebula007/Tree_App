#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<TodoCard>
    id: task_card
    elevation: 0
    radius:[8]
    size_hint:1,None
    height:dp(180)
    #card primary key holder
    MDLabel:
        id:pk
        markup:True

    #task note settings
    MDFloatLayout:
        size_hint:.8,1
        pos_hint: {"center_x": .61,"center_y": .5}
        canvas:
            Color:
                rgba:app.noteschooser()
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
        
        #task tittle 
        MDLabel:
            text:root.tittle
            markup: True
            color: 1/255,1/255,1/255,1
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size:"20sp"
            size_hint_x:.78
            size_hint_y:.8
            pos_hint:{"center_x":.46,"center_y": .82}
        
        #task description settings
        MDLabel:
            id:description
            text:root.description
            color: 1/255,1/255,1/255,1
            font_name:'assets/fonts/JosefinSans-Regular.ttf'
            font_size:"16sp"
            markup:True
            size_hint_x:.8
            size_hint_y:.7
            pos_hint:{"center_x": .46,"center_y":.52}
        
        #checkbox settings
        MDCheckbox:
            id:check
            size_hint:None,None
            size:"48dp","48dp"
            pos_hint:{"center_x":.9,"center_y": .8}
            on_active: app.on_complete(task_card,check,description,bar)
        
        #delete button settings
        MDIconButton:
            icon: 'trash-can-outline'
            theme_text_color: "Custom"
            text_color: 0, 0, 0, .8
            pos_hint:{"center_x":.9,"center_y": .2}
            on_release: 
                app.delete_item(task_card)

        #task date settings    
        MDLabel:
            id:task_date
            text:root.task_date
            color: 1/255,1/255,1/255,1
            font_name: 'assets/fonts/JosefinSans-SemiBold.ttf'
            font_size:"14sp"
            size_hint_x:.8
            size_hint_y:.2
            pos_hint:{"center_x":.43,"center_y": .16}

    #task time settings 
    MDFloatLayout:
        size_hint:.25,1
        pos_hint: {"center_x": .09,"center_y": .5}
        canvas:
            Color:
                rgba:(74/255,222/255,222/255,.01)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
        #task status bar settungs
        MDFloatLayout:
            id:bar
            size_hint:.04,.9
            pos_hint:{"center_x":.9, "center_y":.5}
            md_bg_color:30/255,47/255,151/255,1
          
        MDLabel:
            id:task_time
            text:root.task_time
            color: 1/255,1/255,1/255,1
            font_name: 'assets/fonts/CroissantOne-Regular.ttf'
            font_size:"18sp"
            padding:1,0
            size_hint_x:.78
            size_hint_y:.4
            pos_hint:{"center_x":.46,"center_y": .8}

        MDLabel:
            id:task_time2
            text:root.task_time2
            color:12/255,12/255,13/255,.5
            font_name: 'assets/fonts/CroissantOne-Regular.ttf'
            font_size:"18sp"
            padding:1,0
            size_hint_x:.8
            size_hint_y:.4
            pos_hint:{"center_x":.46,"center_y": .2}

MDScreen:
    name: "todoScreen"
    md_bg_color: 244/255,249/255,253/255,1
    #md_bg_color: 1,1,1,1
    date_text: date_text
    todo_list:todo_list     
    MDFloatLayout:
        MDLabel:
            text:"Today"
            pos_hint: {"center_x":.55,"center_y": .96}
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size:"30dp"
        MDLabel:
            id: date_text
            pos_hint: {"center_x":.55,"center_y": .92}
            font_name: 'assets/fonts/JosefinSans-Regular.ttf'
            font_size:"14sp"
    
    #task view
    MDFloatLayout:
        size_hint:.99,.8
        pos_hint:{"center_x":.5,"center_y": .5}  
        canvas:
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]  
        ScrollView:
            do_scroll_y:True
            do_scroll_x:False
            size_hint_y:1
            pos_hint:{"center_x":.5,"center_y": .5}
            bar_width:2
            bar_color:(30/255,47/255,151/255,.8)
            GridLayout:
                orientation: "lr-bt"
                id: todo_list
                cols: 1
                height:self.minimum_height
                row_default_height:80
                size_hint_y:None
                padding:10,10
                spacing:10,10
                
    #top add task button
    MDFloatLayout:
        size_hint:.46,.06
        pos_hint: {"center_x": .75,"center_y": .94}
        Button:
            text: "Add Task"
            size_hint:1,1
            pos_hint: {"center_x":.5,"center_y": .5}
            background_color:0,0,0,0
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size: "18dp"
            color: 1,1,1,1
            on_press:
                app.clear_screenTask()
                root.manager.transition = FadeTransition()
                root.manager.current = "add_todo"
            canvas.before:
                Color:
                    rgba:(30/255,47/255,151/255,.5)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
        MDIconButton:
            icon:"plus"
            pos_hint:{"center_x": .1,"center_y": .5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition = FadeTransition()
                root.manager.current = "add_todo"

#navigation menu                    
    MDFloatLayout:
        size_hint:1,.1
        pos_hint: {"center_x": .5,"center_y": .05}
        canvas:
            Color:
                rgba:(0/255,0/255,0/255,1)
            Rectangle:
                size:self.size
                pos:self.pos
                
        MDIconButton:
            icon: "home"
            pos_hint: {"center_x":.2 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition = FadeTransition()
                root.manager.current = "Home"
        
        MDFloatLayout:
            size_hint:.2,.8
            pos_hint: {"center_x": .4,"center_y": .5}
            canvas:
                Color:
                    rgba:(30/255,47/255,151/255,.4)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[20]
            MDIconButton:
                icon: "view-agenda"
                pos_hint: {"center_x":.5 ,"center_y":.5}
                theme_text_color:"Custom"
                color:(30/255,47/255,151/255,1)
                on_press:
                    root.manager.transition = FadeTransition()
                    root.manager.current = "add_todo" 
        
        MDIconButton:
            icon: "library"
            pos_hint: {"center_x":.6 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition = FadeTransition()
                root.manager.current = "CoursesScreen"
        
        MDIconButton:
            icon: "account"
            pos_hint: {"center_x":.8 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition = FadeTransition()
                root.manager.current = "AccountMenu"
