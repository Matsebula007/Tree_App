<OverviewCard>
    id: overv_card
    elevation: 0
    #md_bg_color:244/255,249/255,253/255,1
    radius:[8]
    size_hint:1,None
    height:dp(180)
    categ_key:categ_key
    let_grade:let_grade
    tug_count:tug_count
    contrib:contrib
    cat_name:cat_name
    Button:
        size_hint: .8,.8
        pos_hint: {"center_x":.5,"center_y":.5}  
        on_release:
            root.Navigate()
            root.add_categmary(cat_name.text,contrib.text)

    #card primary key holder
    MDLabel:
        id:categ_key
        markup:True

    #main card 
    MDFloatLayout:
        size_hint:1,1
        pos_hint: {"center_x": .5,"center_y": .5}
        canvas:
            Color:
                rgba:app.Courseschooser()
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
        
        #Category identity
        MDLabel:
            id:cat_name
            text:root.Category
            font_name: 'assets/fonts/Poppins-Bold.ttf'
            font_size:"16sp"
            size_hint_x:1
            size_hint_y:.1
            pos_hint:{"center_x":.525,"center_y": .84}
        
        #Category letter grade
        MDLabel:
            id:let_grade
            text:root.Letter_grade
            color:(245/255,83/255,133/255,1)
            font_name: 'assets/fonts/CroissantOne-Regular.ttf'
            font_size:"38sp"
            size_hint_x:.4
            size_hint_y:.36
            pos_hint:{"center_x":.28,"center_y": .6}

        #TUG count
        MDLabel:
            id:tug_count
            text:root.TUG_count
            font_name: 'assets/fonts/CroissantOne-Regular.ttf'
            font_size:"18sp"
            size_hint_x:.4
            size_hint_y:.28
            pos_hint:{"center_x":.75,"center_y": .68}

        #Contribution Header
        MDLabel:
            text:"Contribution"
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size:"18sp"
            size_hint_x:.88
            size_hint_y:.2
            pos_hint:{"center_x":.5,"center_y": .38}

        #Contribution
        MDLabel:
            id:contrib
            text:root.Contribution
            font_name: 'assets/fonts/CroissantOne-Regular.ttf'
            font_size:"30sp"
            size_hint_x:.4
            size_hint_y:.28
            pos_hint:{"center_x":.5,"center_y": .2}

<OverviewScreen>
    name:"overviewscreen"
    category_list:category_list
    crseid:crseid
    crsecr:crsecr
    md_bg_color: 244/255,249/255,253/255,1

    #home header bar
    MDFloatLayout:
        MDIconButton:
            icon:"chevron-left"
            user_font: "40dp"
            pos_hint:{"center_y":.95}
            theme_text_color:'Custom'
            text_color:  12/255,12/255,13/255,1
            on_release:
                app.clearOverview()
                root.manager.transition = FadeTransition()
                root.manager.current = "CoursesScreen"

    
    #Course ID label
        MDLabel:
            id:crseid
            text:""
            pos_hint: {"center_x": .72,"center_y": .95}
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size: "32dp"
    
    #Course Credit label
        MDLabel:
            id:crsecr
            text:""
            size_hint:.3,.8
            pos_hint: {"center_x": .94,"center_y": .95}
            font_name: 'assets/fonts/CroissantOne-Regular.ttf'
            font_size: "18dp"

    MDFloatLayout:
        size_hint:.98,.04
        pos_hint: {"center_x": .5,"center_y": .91}
        canvas:
            Color:
                rgba:(238/255,238/255,238/255,.2)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[10]
        MDLabel:
            id: overview
            text:" Overview"
            size_hint: 1,1
            pos_hint: {"center_x": .55,"center_y": .5}
            foreground_color: 1/255,1/255,1/255,.8
            background_color: 0,0,0,0
            padding:10
            font_name:'assets/fonts/Poppins-Bold.ttf'
            font_size:"18dp"

        MDIconButton:
            icon:"chevron-right"
            user_font: "40dp"
            pos_hint:{"center_x":.96,"center_y":.5}
            theme_text_color:'Custom'
            text_color:  12/255,12/255,13/255,1
            on_release:
                root.manager.transition = FadeTransition()
                root.manager.current = "AssessmentSummary"
    #Category summary scroll
    MDFloatLayout:
        size_hint:.99,.78
        pos_hint:{"center_x":.5,"center_y": .5}
        canvas:
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]    
        ScrollView:
            do_scroll_y:True
            do_scroll_x:False
            size_hint_y:1
            pos_hint:{"center_x":.5,"center_y": .5}
            bar_width:0
            GridLayout:
                orientation: "lr-tb"
                id: category_list
                cols: 2
                height:self.minimum_height
                row_default_height:80
                size_hint_y:None
                padding:10,10
                spacing:10,10
    
    
#navigation menu
    MDFloatLayout:
        size_hint:.98,.1
        pos_hint: {"center_x": .5,"center_y": .06}
        canvas:
            Color:
                rgba:(0/255,0/255,0/255,1)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]

        MDIconButton:
            icon: "home"
            pos_hint: {"center_x":.2 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                #app.clearOverview()
                root.manager.transition = FadeTransition()
                root.manager.current = "Home"

        MDIconButton:
            icon: "view-agenda"
            pos_hint: {"center_x":.4 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.clearOverview()
                root.manager.transition = FadeTransition()
                root.manager.current = "todoScreen" 
        
        MDFloatLayout:
            size_hint:.2,.8
            pos_hint: {"center_x": .6,"center_y": .5}
            canvas:
                Color:
                    rgba:(30/255,47/255,151/255,.4)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[20]
            MDIconButton:
                icon: "library"
                pos_hint: {"center_x":.5 ,"center_y":.5}
                theme_text_color:"Custom"
                text_color: 1,1,1,1
                on_press:
                    app.clearOverview()
                    root.manager.transition = FadeTransition()
                    root.manager.current = "CoursesScreen"
                    
        MDIconButton:
            icon: "account"
            pos_hint: {"center_x":.8 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.clearOverview()
                root.manager.transition = FadeTransition()
                root.manager.current = "AccountMenu"