MDScreen:
    # change chip text color when selected
    name: "addAssesment"
    ass_category:ass_category
    ass_mark:ass_mark
    ass_name:ass_name
    ass_contr:ass_contr
    ass_courseid:ass_courseid
    md_bg_color: 244/255,249/255,253/255,1
    MDFloatLayout:
        MDIconButton:
            icon:"chevron-left"
            user_font: "40dp"
            pos_hint:{"center_y":.95}
            theme_text_color:'Custom'
            text_color:  12/255,12/255,13/255,1
            on_release:
                root.manager.transition = FadeTransition()
                root.manager.current = "AssessmentSummary"
        MDLabel:
            text: "Add Assessment"
            pos_hint: {"center_x": .64,"center_y": .95}
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size: "32dp"

        #Course ID for Assessment
        MDFloatLayout:
            size_hint:.8,.08
            pos_hint: {"center_x": .5,"center_y": .82}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,.6)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            MDLabel:
                id: ass_courseid
                text:""
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .48}
                foreground_color: 1/255,1/255,1/255,.8
                background_color: 0,0,0,0
                padding:10
                font_name:'assets/fonts/JosefinSans-SemiBold.ttf'
                font_size:"18dp"

         #Assessment Category text
        MDFloatLayout:
            size_hint:.8,.08
            pos_hint: {"center_x": .5,"center_y": .72}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,.6)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            MDLabel:
                id:ass_category
                text:""
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .5}
                foreground_color: 1/255,1/255,1/255,.8
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"

        #Assessment title
        MDFloatLayout:
            size_hint:.6,.08
            pos_hint: {"center_x": .5,"center_y": .62}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id:ass_name
                hint_text:"Tittle/name*"
                size_hint: 1,None
                pos_hint: {"center_x": .5,"center_y": .5}
                height: self.minimum_height
                multiline:False
                cursor_width: "2dp"
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"
        
        #Mark settings
        MDFloatLayout:
            size_hint:.3,.08
            pos_hint: {"center_x": .5,"center_y": .52}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id: ass_mark
                hint_text:"Mark*"
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .5}
                multiline:True
                cursor_width: "2dp"
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"
        
            
        #Assessment Weight
        MDFloatLayout:
            size_hint:.6,.08
            pos_hint: {"center_x": .5,"center_y": .42}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id:ass_contr
                hint_text:"Contribute 0-100 *"
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .5}
                height: self.minimum_height
                multiline:False
                cursor_width: "2dp"
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"

        #add course button
        Button:
            text: "Add Assessment"
            size_hint: .5,.08
            pos_hint: {"center_x": .5,"center_y": .26}
            background_color:0,0,0,0
            font_name: 'assets/fonts/JosefinSans-SemiBold.ttf'
            font_size: "18dp"
            color: 1,1,1,1     
            canvas.before:
                Color:
                    rgba:(30/255,47/255,151/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            on_release:
                app.add_assessment(ass_courseid.text,ass_mark.text,ass_contr.text,ass_category.text,ass_name.text)
                #app.update_Course(CourseID.text)
    
#navigation menu
    MDFloatLayout:
        size_hint:.98,.1
        pos_hint: {"center_x": .5,"center_y": .06}
        canvas:
            Color:
                rgba:(0/255,0/255,0/255,1)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]

        MDIconButton:
            icon: "home"
            pos_hint: {"center_x":.2 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.clearOverview()
                root.manager.transition = FadeTransition()
                root.manager.current = "Home"

        MDIconButton:
            icon: "view-agenda"
            pos_hint: {"center_x":.4 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.clearOverview()
                root.manager.transition = FadeTransition()
                root.manager.current = "todoScreen" 
        
        MDFloatLayout:
            size_hint:.2,.8
            pos_hint: {"center_x": .6,"center_y": .5}
            canvas:
                Color:
                    rgba:(30/255,47/255,151/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[20]
            MDIconButton:
                icon: "library"
                pos_hint: {"center_x":.5 ,"center_y":.5}
                theme_text_color:"Custom"
                text_color: 1,1,1,1
                on_press:
                    root.manager.transition = FadeTransition()
                    root.manager.current = "AssessmentSummary"
                    
        MDIconButton:
            icon: "account"
            pos_hint: {"center_x":.8 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.clearOverview()
                root.manager.transition = FadeTransition()
                root.manager.current = "AccountMenu"