MDScreen:
    name: "addAssesment"
    md_bg_color: 244/255,249/255,253/255,.4
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon:"chevron-left"
            user_font: "40dp"
            pos_hint:{"center_y":.95}
            theme_text_color:'Custom'
            text_color:  12/255,12/255,13/255,1
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "CoursesScreen"
        MDLabel:
            text: "Add Assessment"
            pos_hint: {"center_x": .7,"center_y": .95}
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size: "28dp"

        #Course ID for Assessment
        MDFloatLayout:
            size_hint:.8,.08
            pos_hint: {"center_x": .5,"center_y": .84}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id: Ass_CourseID
                hint_text:"PHY 411 *"
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .48}
                multiline:False
                cursor_width: "2dp"
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:10
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"

        #Mark settings
        MDFloatLayout:
            size_hint:.28,.08
            pos_hint: {"center_x": .76,"center_y": .69}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
