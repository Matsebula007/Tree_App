MDScreen:
    name: "addAssesment"
    ass_category:ass_category
    ass_mark:ass_mark
    ass_name:ass_name
    ass_contr:ass_contr
    ass_courseid:ass_courseid
    md_bg_color: 244/255,249/255,253/255,1
    MDFloatLayout:
        MDIconButton:
            icon:"chevron-left"
            user_font: "40dp"
            pos_hint:{"center_y":.95}
            theme_text_color:'Custom'
            text_color:  12/255,12/255,13/255,1
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "CoursesScreen"
        MDLabel:
            text: "Add Assessment"
            pos_hint: {"center_x": .64,"center_y": .95}
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size: "32dp"

        #Course ID for Assessment
        MDFloatLayout:
            size_hint:.62,.08
            pos_hint: {"center_x": .4,"center_y": .84}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,.6)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            MDLabel:
                id: ass_courseid
                text:""
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .48}
                foreground_color: 1/255,1/255,1/255,.8
                background_color: 0,0,0,0
                padding:10
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"

        #Mark settings
        MDFloatLayout:
            size_hint:.28,.08
            pos_hint: {"center_x": .76,"center_y": .74}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id: ass_mark
                hint_text:"Mark*"
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .5}
                multiline:True
                cursor_width: "2dp"
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"
        

        #Assessment title
        MDFloatLayout:
            size_hint:.5,.08
            pos_hint: {"center_x": .34,"center_y": .74}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id:ass_name
                hint_text:"Tittle/name*"
                size_hint: 1,None
                pos_hint: {"center_x": .5,"center_y": .5}
                height: self.minimum_height
                multiline:False
                cursor_width: "2dp"
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"
            
        #Assessment Weight
        MDFloatLayout:
            size_hint:.8,.08
            pos_hint: {"center_x": .5,"center_y": .64}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id:ass_contr
                hint_text:"Contribution 0|100"
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .5}
                height: self.minimum_height
                multiline:False
                cursor_width: "2dp"
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"

    
        #Assessment Category text
        MDFloatLayout:
            size_hint:.8,.08
            pos_hint: {"center_x": .5,"center_y": .22}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            MDLabel:
                id:ass_category
                hint_text:"Long press Category *"
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .5}
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"

        #Assessment Category filter
        MDFloatLayout:
            size_hint:.9,.27
            pos_hint: {"center_x": .5,"center_y": .42}
            canvas:
                Color:
                    rgba:(244/255,249/255,253/255,.6)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
          
            MDChip:
                id: test
                radius: [dp(6),dp(6),dp(6),dp(6)]
                text: "Test"
                text_color:(12/255,12/255,13/255,.5)
                icon_check_color:"#1F2F98"
                check: True
                md_bg_color:74/255,222/255,222/255,1
                on_release:
                    app.on_Selection(test,lab,quiz,classwork,assignment,group,presentation,other)
                pos_hint:{"center_x":.2,"center_y":.86}

            MDChip:
                id: assignment
                radius: [dp(6),dp(6),dp(6),dp(6)]
                text: "Assignment"
                text_color:(12/255,12/255,13/255,.5)
                icon_check_color:"#1F2F98"
                check: True
                md_bg_color:74/255,222/255,222/255,1
                on_release:app.on_Selection(test,lab,quiz,classwork,assignment,group,presentation,other)
                pos_hint:{"center_x":.66,"center_y":.86}
            MDChip:
                id: quiz
                radius: [dp(6),dp(6),dp(6),dp(6)]
                text: "Quiz"
                text_color:(12/255,12/255,13/255,.5)
                icon_check_color:"#1F2F98"
                pos_hint:{"center_x":.26,"center_y":.41}
                check: True
                md_bg_color:74/255,222/255,222/255,1
                on_release:app.on_Selection(test,lab,quiz,classwork,assignment,group,presentation,other)
            MDChip:
                id: lab
                radius: [dp(6),dp(6),dp(6),dp(6)]
                text: "Lab"
                text_color:(12/255,12/255,13/255,.5)
                icon_check_color:"#1F2F98"
                pos_hint:{"center_x":.74,"center_y":.63}
                check: True
                md_bg_color:74/255,222/255,222/255,1
                on_release:app.on_Selection(test,lab,quiz,classwork,assignment,group,presentation,other)
            MDChip:
                id: classwork
                radius: [dp(6),dp(6),dp(6),dp(6)]
                text: "Classwork"
                text_color:(12/255,12/255,13/255,.5)
                icon_check_color:"#1F2F98"
                pos_hint:{"center_x":.72,"center_y":.41}
                check: True
                md_bg_color:74/255,222/255,222/255,1
                on_release:app.on_Selection(test,lab,quiz,classwork,assignment,group,presentation,other)
            MDChip:
                id: group
                radius: [dp(6),dp(6),dp(6),dp(6)]
                text: "Groupwork"
                text_color:(12/255,12/255,13/255,.5)
                icon_check_color:"#1F2F98"
                pos_hint:{"center_x":.26,"center_y":.63}
                check: True
                md_bg_color:74/255,222/255,222/255,1
                on_release:app.on_Selection(test,lab,quiz,classwork,assignment,group,presentation,other)
            MDChip:
                id: presentation
                radius: [dp(6),dp(6),dp(6),dp(6)]
                icon_check_color:"#1F2F98"
                text: "Presentation"
                text_color:(12/255,12/255,13/255,.5)
                pos_hint:{"center_x":.3,"center_y":.16}
                check: True
                md_bg_color:74/255,222/255,222/255,1
                on_release:app.on_Selection(test,lab,quiz,classwork,assignment,group,presentation,other)
            MDChip:
                id: other
                radius: [dp(6),dp(6),dp(6),dp(6)]
                text: "Other"
                text_color:(12/255,12/255,13/255,.5)
                icon_check_color:"#1F2F98"
                pos_hint:{"center_x":.78,"center_y":.16}
                check: True
                #line_color:"grey"
                md_bg_color:74/255,222/255,222/255,1
                on_release:app.on_Selection(test,lab,quiz,classwork,assignment,group,presentation,other)

        #add course button
        Button:
            text: "Add Assessment"
            size_hint: .82,.08
            pos_hint: {"center_x": .5,"center_y": .12}
            background_color:0,0,0,0
            font_name: 'assets/fonts/JosefinSans-SemiBold.ttf'
            font_size: "18dp"
            color: 1,1,1,1     
            canvas.before:
                Color:
                    rgba:(30/255,47/255,151/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            on_release:
                app.add_assessment(ass_courseid.text,ass_mark.text,ass_contr.text,ass_category.text,ass_name.text)
                #app.update_Course(CourseID.text)
    
