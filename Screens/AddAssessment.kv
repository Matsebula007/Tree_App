            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id:Ass_title
                hint_text:"Title *"
                size_hint: 1,None
                pos_hint: {"center_x": .5,"center_y": .5}
