MDScreen:
    name:"Home"
    tasks_home:tasks_home
    course_home: course_home

    #home header bar
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        
        MDIconButton:
            icon: "account"
            pos_hint: {"center_x":.1,"center_y":.95}
            theme_text_color:"Custom"
            text_color:rgba(26,24,58,255)
            on_press:
                root.manager.transition.direction = "right"
                root.manager.current = "todoScreen"
    
    #schedule label
    MDLabel:
        text:"Your schedule"
        font_name:'assets/fonts/Sono_Monospace-Bold.ttf'
        font_size:"20dp"
        pos_hint: {"center_x":.56,"center_y": .9}

    #task view_home
    MDFloatLayout:
        size_hint:1,.2
        pos_hint: {"center_x": .5,"center_y": .76}
        canvas:
            Color:
                rgba:(1,1,1,1)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]
        ScrollView:
            do_scroll_y:False
            do_scroll_x:True
            size_hint:1,1
            #height: dp(160)
            pos_hint:{"center_x":.5,"center_y":.5}
            bar_width: 0
            MDGridLayout:
                orientation:"rl-tb"
                md_bg_color: 1,1,1,1
                id: tasks_home
                rows: 1
                row_force_default: False
                size_hint:1,1
                #height: dp(160)
                padding:dp(1)
                spacing:dp(10)
                adaptive_width:True
    
    #courses label
    MDLabel:
        text:"Courses"
        font_name:'assets/fonts/Sono_Monospace-Bold.ttf'
        font_size:"22dp"
        pos_hint: {"center_x":.56,"center_y": .64}
   
    #course view_home
    MDFloatLayout:
        size_hint:.98,.6
        pos_hint:{"center_x":.5,"center_y": .5}    
        ScrollView:
            do_scroll_y:True
            do_scroll_x:False
            size_hint_y:.85
            pos_hint:{"center_x":.5,"center_y": .26}
            bar_width:0
            GridLayout:
                #orientation: "lr-tb"
                md_bg_color: 1,1,1,1
                id: course_home
                cols: 2
                height:self.minimum_height
                row_default_height:100
                size_hint_y:None
                padding:10,10
                spacing:10,10
                
    #navigation menu
    MDFloatLayout:
        size_hint:.98,.1
        pos_hint: {"center_x": .5,"center_y": .06}
        canvas:
            Color:
                rgba:(0/255,0/255,0/255,1)
            RoundedRectangle:
                size:self.size
                pos:self.pos
                radius:[15]

        MDIconButton:
            icon: "home"
            pos_hint: {"center_x":.2 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "right"
                root.manager.current = "Home"

        MDIconButton:
            icon: "view-agenda"
            pos_hint: {"center_x":.4 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "todoScreen" 
        
        MDIconButton:
            icon: "library"
            pos_hint: {"center_x":.6 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "CoursesScreen"
        
        MDIconButton:
            icon: "folder"
            pos_hint: {"center_x":.8 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "Home"
