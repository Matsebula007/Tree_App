MDScreen: 
    name:"add_todo"
    md_bg_color: 244/255,249/255,253/255,.2
    description: description
    tittle:tittle
    task_date:task_date
    task_time:task_time
    task_time2:task_time2
    
    MDFloatLayout:
        MDIconButton:
            icon:"chevron-left"
            user_font: "40dp"
            pos_hint:{"center_y":.95}
            theme_text_color:'Custom'
            text_color:  12/255,12/255,13/255,1
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "todoScreen"
        MDLabel:
            text: "Add Task"
            pos_hint: {"center_x": .7,"center_y": .95}
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size: "32dp"

    #tittle input
        MDFloatLayout:
            size_hint:.85,.08
            pos_hint: {"center_x": .5,"center_y": .82}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id: tittle
                hint_text:"tittle"
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .4}
                multiline:False
                cursor_width: "2dp"
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:10
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"

    #description input
        MDFloatLayout:
            size_hint:.85,.24
            pos_hint: {"center_x": .5,"center_y": .64}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id: description
                hint_text:"Description"
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .5}
                multiline:True
                cursor_width: "2dp"
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"
        
    #date_time input
        MDFloatLayout:
            size_hint:.85,.1
            pos_hint: {"center_x": .5,"center_y": .436}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id:task_date
                hint_text:"Date"
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .5}
                multiline:True
                cursor_width: "2dp"
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:8
                font_name:'assets/fonts/JosefinSans-Light.ttf'
                font_size:"18dp"
            MDIconButton:
                icon: 'calendar'
                pos_hint:{"center_x":.9,"center_y": .5}
                on_release: app.show_date_picker()
                padding: '10dp'

        #time picker settings 
        #From
        MDFloatLayout:
            size_hint:.4,.1
            pos_hint: {"center_x": .28,"center_y": .32}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id:task_time
                hint_text:"From"
                size_hint: 1,None
                pos_hint: {"center_x": .5,"center_y": .6}
                height: self.minimum_height
                multiline:False
                cursor_width: "2dp"
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Light.ttf'
                font_size:"18dp"
            MDIconButton:
                icon: 'clock'
                pos_hint:{"center_x":.8,"center_y": .3}
                on_release: app.show_time_picker()
                padding: '10dp'
        #To
        MDFloatLayout:
            size_hint:.4,.1
            pos_hint: {"center_x": .72,"center_y": .32}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id:task_time2
                hint_text:"To"
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .6}
                height: self.minimum_height
                multiline:False
                cursor_width: "2dp"
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Light.ttf'
                font_size:"18dp"
            MDIconButton:
                icon: 'clock'
                pos_hint:{"center_x":.8,"center_y": .3}
                on_release: app.show_time_picker2()
                padding: '10dp'
        


        #add task button
        Button:
            text: "ADD TASK"
            size_hint: .45,.08
            pos_hint: {"center_x": .5,"center_y": .2}
            background_color:0,0,0,0
            font_name: 'assets/fonts/JosefinSans-SemiBold.ttf'
            font_size: "18dp"
            color: 1,1,1,1
            on_release:
                app.add_todo(tittle.text, description.text,task_date.text,task_time.text,task_time2.text)
                app.update_task(tittle.text)
                
            canvas.before:
                Color:
                    rgba:(30/255,47/255,151/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
