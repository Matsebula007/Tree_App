#: import FadeTransition kivy.uix.screenmanager.FadeTransition
MDScreen: 
    name:"add_todo"
    md_bg_color: 244/255,249/255,253/255,1
    description: description
    tittle:tittle
    task_date:task_date
   
    
    MDFloatLayout:
        MDIconButton:
            icon:"chevron-left"
            icon_size:dp(30)
            pos_hint:{"center_y":.95}
            theme_text_color:'Custom'
            color:(30/255,47/255,151/255,1)
            on_release:
                root.manager.transition = FadeTransition()
                root.manager.current = "todoScreen"
        MDLabel:
            text: "Add Note"
            pos_hint: {"center_x": .8,"center_y": .95}
            font_name: 'assets/fonts/JosefinSans-Bold.ttf'
            font_size: "32dp"

    #tittle input
        MDFloatLayout:
            size_hint:.85,.08
            pos_hint: {"center_x": .5,"center_y": .82}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id: tittle
                hint_text:"Tittle"
                input_type:"text"
                keyboard_suggestion:True
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .4}
                multiline:False
                cursor_width: "2dp"
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:10
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"
            MDIconButton:
                icon: "text"
                icon_size:dp(20)
                pos_hint:{"center_x":.9,"center_y": .5}
                on_release: tittle.text =""
                padding: '10dp'
          

    #description input
        MDFloatLayout:
            size_hint:.85,.36
            pos_hint: {"center_x": .5,"center_y": .58}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id: description
                hint_text:"Description"
                input_type:"text"
                keyboard_suggestion:True
                size_hint: 1,1
                pos_hint: {"center_x": .5,"center_y": .5}
                multiline:True
                cursor_width: "2dp"
                foreground_color: 1/255,1/255,1/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Regular.ttf'
                font_size:"18dp"
            MDIconButton:
                icon: "text"
                icon_size:dp(20)
                pos_hint:{"center_x":.9,"center_y": .9}
                on_release: description.text =""
                padding: '10dp'
        
    #date_time input
        MDFloatLayout:
            size_hint:.85,.1
            pos_hint: {"center_x": .5,"center_y": .33}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id:task_date
                hint_text:"Date"
                multiline:False
                size_hint: .9,.9
                pos_hint: {"center_x": .5,"center_y": .5}
                foreground_color: 12/255,12/255,13/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/fonts/JosefinSans-Light.ttf'
                font_size:"18dp"
            Button:
                size_hint: 1,1
                pos_hint: {"center_x":.5,"center_y":.5}  
                background_color:0,0,0,0  
                on_release:
                    app.show_date_picker()
            


        


        #add task button
        Button:
            text: "Add Note"
            size_hint: .45,.08
            pos_hint: {"center_x": .5,"center_y": .2}
            background_color:0,0,0,0
            font_name: 'assets/fonts/JosefinSans-SemiBold.ttf'
            font_size: "18dp"
            color: 1,1,1,1
            on_release:
                app.add_todo(tittle.text, description.text,task_date.text)
                app.update_task(tittle.text)
                
            canvas.before:
                Color:
                    rgba:(30/255,47/255,151/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]

    #navigation menu
    MDFloatLayout:
        size_hint:1,.1
        pos_hint: {"center_x": .5,"center_y": .05}
        canvas:
            Color:
                rgba:(0/255,0/255,0/255,1)
            Rectangle:
                size:self.size
                pos:self.pos

        MDIconButton:
            icon: "home"
            icon_size:dp(30)
            pos_hint: {"center_x":.14 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.update_coursescreen()
                app.update_home_sche()
                root.manager.transition = FadeTransition()
                root.manager.current = "Home"

        MDFloatLayout:
            size_hint:.2,.8
            pos_hint: {"center_x": .38,"center_y": .5}
            canvas:
                Color:
                    rgba:(30/255,47/255,151/255,.4)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[20]
            MDIconButton:
                icon: "view-agenda"
                icon_size:dp(30)
                pos_hint: {"center_x":.5,"center_y":.5}
                theme_text_color:"Custom"
                color:(30/255,47/255,151/255,1)
                on_press:
                    root.manager.transition = FadeTransition()
                    root.manager.current = "todoScreen" 
        
        
        MDIconButton:
            icon: "library"
            icon_size:dp(30)
            pos_hint: {"center_x":.62 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.update_coursescreen()
                root.manager.transition = FadeTransition()
                root.manager.current = "CoursesScreen"
                    
        MDIconButton:
            icon: "calendar"
            icon_size:dp(30)
            pos_hint: {"center_x":.86 ,"center_y":.5}
            theme_text_color:"Custom"
            text_color: 1,1,1,1
            on_press:
                app.clear_for_week()
                #app.update_month()
                root.manager.transition = FadeTransition()
                root.manager.current = "Calendarscreen"

